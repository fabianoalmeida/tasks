<%= simple_form_for([@list, @task], 
                    :id => 'new_task',
                    :wrapper => :inline, 
                    :html => { :class => 'form-horizontal' } ) do |f| %>

  <div class="inputs">
    <%= f.input :name, :label => 'Task name' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn primary' %>
  </div>
<% end %>