<%= simple_form_for(resource, 
                    :as => resource_name, 
                    :wrapper => :inline, 
                    :url => session_path(resource_name)) do |f| %>

	<%= f.input :login, :required => true, :autofocus => true %>
	<%= f.input :password, :required => true %>
    <%= f.button :submit, "Sign in" %>
<% end %>

<%= render "devise/shared/links" %>