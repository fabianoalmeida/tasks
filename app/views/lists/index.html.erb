<% content_for :subtitle do %>
  <h1>My lists</h1>
<% end %>

<table id="my_lists">
  <tr>
    <th colspan="3"><%= List.human_attribute_name(:name) %></th>
    <th><%= link_to image_tag('/assets/add-action.png'), new_list_path, title: 'New list', rel: 'New list' %></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td width="90%"><%= list.name %></td>
    <td><%= link_to 'Show', list, :class => 'btn' %></td>
    <td><%= link_to 'Edit', edit_list_path(list), :class => 'btn primary' %></td>
    <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn danger' %></td>
  </tr>
<% end %>
</table>