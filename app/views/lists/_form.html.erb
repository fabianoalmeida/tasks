<%= simple_form_for(@list, :wrapper => :inline, :html => { :class => 'form-horizontal' } ) do |f| %>
  <div class="inputs">
	<%= f.input :name, :autofocus => true %>
	<%= f.input :limited, as: :boolean %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn primary' %>
    <%= link_to 'Cancel', lists_path, :class => 'btn danger' %>
  </div>
<% end %>